<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="tv_label_style">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_subtitle_style">
        <item name="android:textSize">@dimen/sub_text_size_normal</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_label_tablet_style" parent="tv_label_style">
        <item name="android:textSize">@dimen/text_size_tablet</item>
    </style>

    <style name="tv_subtitle_tablet_style" parent="tv_subtitle_style">
        <item name="android:textSize">@dimen/sub_test_size_tablet</item>
    </style>
</resources>
